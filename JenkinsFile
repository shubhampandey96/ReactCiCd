pipeline {
    agent any
    environment {
        MY_VAR ="my value"
    }
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:22.11.0-alpine3.20'
                    args '-u root'
                }
            }
            steps {
                sh '''
                  ls -l
                  node --version
                  npm --version
                  npm install
                  npm run build
                  ls -l
                '''
                stash includes: 'dist/**', name: 'build-dist'
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'node:22.11.0-alpine3.20'
                    args '-u root'
                }
            }
            steps {
                unstash 'build-dist'
                sh '''
                  npm run test
                  test -f dist/index.html
                '''
            }
        }

        stage('Deploy') {
            agent {
                docker {
                    image 'node:22.11.0-alpine3.20'
                    args '-u root'
                }
            }
            steps {
                unstash 'build-dist'
                sh '''
                  npm install -g vercel
                  echo $MY_VAR
                '''
            }
        }
    }
}
